extends layout
include post

block content
  div(style="overflow:auto; margin-bottom: 30px")
    h1= project.title
      | 
      span.caption= project.sub

    if project.caption
      if project.pic
        img(src=im("/"+project.pic[0]), style="float:right; width: 300px")

      p !{project.caption}
      if project.about
        hr
        p !{project.about}


  if project.related
    .splitter
      hr
      | related

    .hand
      each related in project.related
        a.thumb(href=related.url)
          .caption 
            h2= related.title
            .sub= related.sub
          if related.pic
            img(src=im("/"+related.pic[0]))
          else
            img(src=im("http://i.imgur.com/rwd8s1N.jpg"))

  .splitter
    hr
    | posts
  br
    
  each article in articles
    mixin post(article)
    hr
