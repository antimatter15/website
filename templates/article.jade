    if project.related
      .splitter
        hr
        | related

      .hand
        each related in [project].concat(project.related)
          a.thumb(href=related.url)
            .caption 
              h2= related.title
              .sub= related.sub
            if related.pic
              img(src="/"+related.pic[0])
