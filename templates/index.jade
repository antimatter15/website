  //-           //- +img("/img/cat.jpg")
  //-           +img("/img/cat.jpg")

    //- .thumb
    //-     img(src="http://i.imgur.com/fSgnUKW.jpg", style="height: 100%")

  ul.plain-text
    each article in articles.filter(function(e){return e != featured && !e.metadata.hidden }).slice(0, 12)
      li
        a(href=article.url)
          span.date(title=article.date)= moment.utc(article.date).format('DD MMMM YYYY')
          h2= article.metadata.short || article.title
          span= " "
          span.caption= article.metadata.caption || article.title
        
        

  .splitter(style="text-align:center")
    hr
    a(href="/projects") projects 
    //- span(style="font-size: x-small; color: #999") &#9660;

  .projects
    
    each project in contents['projects.yaml'].featured
      //- pre= inspect(project)
      .project
        a(href=project.url)
          h2= project.title
            | 
            span.caption= project.sub
        .cluster
          if project.subprojects
            .major
              a(href=project.url)
                if project.pic
                  +img(project.pic[0])
                else
                  +img("/img/brick.jpg")
              .caption!= project.caption
            .subprojects
              each subproject in project.subprojects
                if subproject.featured !== false
                  a.minor(href=subproject.url)
                    if subproject.pic
                      +small(subproject.pic[0])
                    else
                      +small("/img/dog.jpg")
                    .caption
                      h2= subproject.title
                      | 
                      span= subproject.sub
          else
            .major
              a(href=project.url)
                if project.pic
                  +img(project.pic[0])
                else
                  +img("/img/dog.jpg")
            .right
              if project.pic
                a(href=project.url)
                  +small(project.pic[1])
                  +small(project.pic[2])
                  +small(project.pic[3])
              .caption!= project.caption
      
  
